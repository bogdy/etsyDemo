<section class="contenido">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<div class="thumbnail">
					<%= image_tag @listing.image.url, class: "img-responsive" %>
				</div>
			</div>
			<div class="col-md-6">
				<h3><%= @listing.name %></h3>
				<p><%= number_to_currency(@listing.price, :unit => "â‚¬", :format => "%n %u") %></p>
				<p><%= @listing.description %></p>
				<%= link_to 'Buy It Now', new_listing_order_path(@listing), class: "btn btn-primary btn-lg btn-block" %>

			</div>
		</div>

		<% if current_user == @listing.user %>
			<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
		<% end %>
		<%= link_to 'Home', root_path, class: "btn btn-link" %>
	</div>
</section>
